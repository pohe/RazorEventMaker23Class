@page
@using RazorEventMaker23Class.Interfaces;
@inject ICountryRepository repository;
@model RazorEventMaker23Class.Pages.Countries.CountryIndexModel
@{
    ViewData["Title"] = "Countries";
}
<h1>Countries</h1>

<div>
    <ul>
        <li>There are @repository.GetAllCountries().Count   countries</li>

    </ul>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Code
            </th>
            <th>
                Name
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Countries)
        {
            <tr>
                <td>
                    @item.Code
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    <a asp-page="CountryEvents" asp-route-Code="@item.Code">Country Events</a> |
                    <a asp-page="DeleteCountry" asp-route-Code="@item.Code">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
