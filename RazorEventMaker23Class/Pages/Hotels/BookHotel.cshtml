@page
@using RazorEventMaker23Class.Models;
@model RazorEventMaker23Class.Pages.Hotels.BookHotelModel
@{
    ViewData["Title"] = "Book hotel";
}

<h1>Book hotel</h1>
<form method="post">
    <div class="form-group">
        <label  class="control-label">User</label>
        <select asp-for="@Model.HotelBooking.UserId" asp-items="@Model.UserNames"  class="form-control">
            <option value="">--seelct a user--</option>
        </select>
    </div>
    <div class="form-group">
        <label class="control-label">Hotel</label>
        <select asp-for="@Model.HotelBooking.HotelId" asp-items="@Model.HotelNames" class="form-control">
            <option value="">--seelct a hotel--</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="@Model.HotelBooking.DateTime" class="control-label"></label>
        <input asp-for="@Model.HotelBooking.DateTime" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <label asp-for="@Model.HotelBooking.NumberOfDays" class="control-label"></label>
        <input asp-for="@Model.HotelBooking.NumberOfDays" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <label asp-for="@Model.HotelBooking.Facilities"  class="control-label" />
        <br />
        @foreach(var c in Model.Facilities)
        {
            <input name="AreChecked" type="checkbox" value="@c" /> @c
        }
    </div>
    <br />
    <div class="form-group">
        <label asp-for="@Model.HotelBooking.PriceModel" class="control-label">Price model (from list of strings)</label>
        <br />
        @foreach (var priceModel in Model.PriceModel)
        {
            <input type="radio" asp-for="@Model.HotelBooking.PriceModel" value="@priceModel" />
            @priceModel
        }
    </div>
    <br />
    <div class="form-group">
        <label asp-for="@Model.HotelBooking.IsVip" class="control-label">Is Vip (from enum)</label>
        <br />
        <select asp-for="@Model.HotelBooking.IsVip" asp-items="Html.GetEnumSelectList<Vip>()">
            <option selected="selected" value="">Please select</option>
        </select>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="@Model.HotelBooking.Country" class="control-label">Country (from enum)</label>
        <br />
        @foreach (var c in System.Enum.GetValues(typeof(Countries)))
        {
            <label class="control-label">@c</label>
            <input type="radio" asp-for="@Model.HotelBooking.Country" value="@c" />
        }
    </div>
    <div class="form-group">
        <input type="submit" value="Create bookinh" class="btn btn-primary" />
      
    </div>


</form>