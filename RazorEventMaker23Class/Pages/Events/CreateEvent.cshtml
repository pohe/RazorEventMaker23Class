@page
@model RazorEventMaker23Class.Pages.Events.CreateEventModel
@{
    ViewData["Title"] = "Create Event";
}

<h1>Create event</h1>

<form method="post">

    <div class="form-group">
        <label asp-for="@Model.NewEvent.Name" class="control-label"></label>
        <input asp-for="@Model.NewEvent.Name" class="form-control" />
        <span asp-validation-for="NewEvent.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.NewEvent.Description" class="control-label"></label>
        <input asp-for="@Model.NewEvent.Description" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.NewEvent.CountryCode" class="control-label"></label>
        <select asp-for="@Model.NewEvent.CountryCode" asp-items="@Model.CountryCodes" class="form-control">
            <option value="">Select a country</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="@Model.NewEvent.City" class="control-label"></label>
        <input asp-for="@Model.NewEvent.City" class="form-control" />
        <span asp-validation-for="NewEvent.City" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.NewEvent.DateTime" class="control-label"></label>
        <input asp-for="@Model.NewEvent.DateTime" class="form-control" />
        <span asp-validation-for="NewEvent.DateTime" class="text-danger"></span>
    </div>
   
    <div class="form-group">
    <input type="submit" value="Create a event" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-page="Index">Back to List</a>
</div>